@model UrlInfo
@{
    ViewBag.Title = "虾米歌单导出";
    Layout = "_Layout";
}


<form class="export-form" method="post" asp-controller="XiamiToCloud" asp-action="TransformFromXiamiToCloud" asp-antiforgery="true">
    <h2 class="export-title">
        虾米歌单导出
    </h2>
    <div class="form-group">
        <div class="input-group input-group-lg">
            <span class="input-group-addon">http://www.xiami.com/space/lib-song/u/</span>
            <input type="text" class="form-control" placeholder="请按照教程输入内容" asp-for="UrlStr" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg export-btn">导出</button>
</form>

<div class="support-group-wrapper">
    <span style="display: block;">如果觉得有用，请随意赞赏，感谢你的支持！</span>
    <div class="support">
        <img src="~/images/coco_wechat.png" alt="微信扫码" />
        <span style="display:block">微信</span>
    </div>
    <div class="support">
        <img src="~/images/coco_zhifubao.png" alt="支付宝扫码" />
        <span style="display:block">支付宝</span>
    </div>
</div>


